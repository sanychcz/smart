<div class="row">

	<div class="large-6 columns">
		<h5 class="subheader">Polička s * jsou povinná</h5>
		<%= form_for [@company, @employee] do |f| %>
		<%= render 'shared/error_message', object: f.object   %>

		<p><%= f.label :name, "*Jméno" %>
		<%= f.text_field :name %></p>
	
		<p><%= f.label :surname, "*Příjmení" %>
		<%= f.text_field :surname %></p>

		<p><%= f.label :address, "Adresa" %>
		<%= f.text_field :address %></p>

		<p><%= f.label :phone, "*Telefon" %>
		<%= f.telephone_field :phone %></p>

		<p><%= f.label :email, "*Email" %>
		<%= f.text_field :email %></p>

		<p><%= f.label :birthday, "Datum narození" %>
		<%= f.date_select :birthday, start_year: 1960 %></p>

		<p><%= f.label :position, "Pozice" %>
		<%= f.collection_select :position, Position.all, :name, :name %></p>

		<p><%= f.submit "Uložit zaměstnance", :class => "button secondary" %></p>
	<% end %>
</div>
</div>
